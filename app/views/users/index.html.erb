<h1>Admin Account Management</h1>
<!--<%= link_to("<< Back To user", "#", :class => 'action equip_list')%>-->

<div class="users index">

   <!--<h2> Accounts </h2>-->
    <% flash.each do |type, msg| %>
        <div style="color:red;">
        <%= msg %>
        </div>
    <% end %>
    <br />
    <!--
    <%= link_to("ADD NEW user", new_user_path, :class => "action new")%>
    -->
    <table class="listing" summary="user List">
        <tr class="header">
            <th style="padding:0 15px;"> ID </th>
            <th style="padding:0 15px;"> First Name </th>
            <th style="padding:0 15px;"> Last Name </th>
            <th style="padding:0 15px;"> Email </th>
            <!--
            <th style="padding:0 15px;"> Phone Number </th>
            <th style="padding:0 15px;"> Secondary Contact </th>
            <th style="padding:0 15px;"> Time Created </th>
            <th style="padding:0 15px;"> Time Updated </th>
            <th style="padding:0 15px;"> Admin </th>
            -->
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td style="padding:0 15px;"><%= user.id%></td>
            <td style="padding:0 15px;"><%= user.first_name %> </td>
            <td style="padding:0 15px;"><%= user.last_name %> </td>
            <td style="padding:0 15px;"><%= user.email%></td>
            <!--
            <td style="padding:0 15px;"><%= user.phone_number %> </td>
            <td style="padding:0 15px;"><%= user.secondary_contact %> </td>
            <td style="padding:0 15px;"><%= user.created_at%></td>
            <td style="padding:0 15px;"><%= user.updated_at%></td>
            <td style="padding:0 15px;"><%= user.is_admin %> </td> 
            -->
            <td style="padding:0 15px;" class="actions"> 
                <%= link_to("Show", user_path(user), :class => "action show") %>
                <%= link_to("Edit", edit_user_path(user), :class => "action edit") %>
                <%= link_to("Delete", delete_user_path(user), :class => "action delete") %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
