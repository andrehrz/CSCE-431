<% flash.each do |type, msg| %>
    <div style="color:red;">
    <%= msg %>
    </div>
<% end %>

<style>
body {
  background-color: rgb(200, 200, 200);
  opacity: 0.9;
  color: black;
}
table.center {
  margin-left:auto;
  margin-right:auto;
  color: black;
}
</style>

<h2 style = "text-align: center; margin-top:30px;">Admin | Edit User Info</h2>
<br/>

<center>
<div class="container" style="width: 450px; margin: auto; background-color: rgb(230, 230, 230); 
    border-radius:10px; outline: 10px black;  box-shadow: 0 0 2px #000000; padding-top:15px; padding-bottom:15px;">
    <div class="user edit">
        <%= form_for(@user, url: {action: "update"}) do |f| %>
            <table summary = "Book from fields">
                <tr>
                    <th><%= f.label :email %></th>
                    <td><%= f.text_field(:email) %></td>
                </tr>
                <tr>
                    <th><%= f.label :first_name %></th>
                    <td><%= f.text_field(:first_name) %></td>
                </tr>
                <tr>
                    <th><%= f.label :last_name %></th>
                    <td><%= f.text_field(:last_name) %></td>
                </tr>
                <tr>
                    <th><%= f.label :phone_number %></th>
                    <td><%= f.text_field(:phone_number) %></td>
                </tr>
                <tr>
                    <th><%= f.label :secondary_contact %></th>
                    <td><%= f.text_field(:secondary_contact) %></td>
                </tr>
                <tr>
                    <th><%= f.label :violation_counter %></th>
                    <td><%= f.text_field(:violation_counter) %></td>
                </tr>
                <tr>
                    <th><%= f.label :is_admin %></th>
                    <td><%= f.select(:is_admin, options_for_select([['No', false], ['Yes', true]]), { include_blank: false })%></td>
                </tr>
            </table>

            <div class="form-buttons" style="margin-top:15px;">
                <%= f.submit("Update User") %>
            </div>

        <% end %>
    </div>
</div>
</center>
<br/>

<div style = "text-align: center;">
    <%= link_to("<< Back to Users List", users_path, :class => 'back-link') %>
</div>
