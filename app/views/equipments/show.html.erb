<% flash.each do |type, msg| %>
    <div style="color:red;">
    <%= msg %>
    </div>
<% end %>

<style>
body {
  background-color: Black;
  opacity: 0.8;
  color: white;
}
table.center {
  margin-left:auto;
  margin-right:auto;
  color: white;
}
</style>

<h2 style = "text-align:center;">Admin | Equipment Item Info</h2>


<div class="equipments show">

  <table class="center" summary="equipment detail view">
    <tr>
      <th>ID</th>
      <td><%= @equipment.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @equipment.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @equipment.description%></td>
    </tr>
    <tr>
      <th>Available</th>
      <td><%= @equipment.available %></td>
    </tr>

  </table>
</div>
<br/>

<div style="text-align:center;">
    <%= link_to("<< Back to Equipment List", equipments_path, :class => 'back-link') %>
</div>
