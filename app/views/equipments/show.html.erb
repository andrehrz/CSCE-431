<% flash.each do |type, msg| %>
    <div style="color:red;">
    <%= msg %>
    </div>
<% end %>


<h2>Admin | Equipment Item Info</h2>


<div class="equipments show">

  <table summary="equipment detail view">
    <tr>
      <th>ID</th>
      <td><%= @equipment.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @equipment.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @equipment.description%></td>
    </tr>
    <tr>
      <th>Available</th>
      <td><%= @equipment.available %></td>
    </tr>
    
  </table>
</div>
<br/>

<%= link_to("<< Back to Equipment List", equipments_path, :class => 'back-link') %>